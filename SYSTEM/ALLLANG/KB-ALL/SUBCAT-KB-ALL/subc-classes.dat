; ---------------------------------------------------------------------------
		             (trans-result () (trans result-verbs))
			    ; --- mutare, trasformare
; ---------------------------------------------------------------------------
		             (trans-topic () (trans topic-verbs))
			    ; --- riempire
; ---------------------------------------------------------------------------
		             (trans-separ () (trans theme-from-verbs))
			    ; --- separare, distinguere, dividere, staccare
			    ; --- diversificare, preservare
; ---------------------------------------------------------------------------
			     (trans-to-with-theme () (trans)
	       	               ; *** verbs with a theme 
		               ;    (governed by "to, with" - English - or "a, con" - Italian)
                                  (((prep (word-typ &theme-prep-4)
                                          (not (down (cat verb))))))
                                  (verb-indcompl-theme))
	      	 	       ; --- abbinare, collegare, confrontare, connettere,
			       ; --- paragonare, unire
; ---------------------------------------------------------------------------
			     (trans-in-theme () (trans theme-in-verbs))
	      	 	       ; --- educare, convincere, condannare, dimensionare
			       ; --- dedicare, chiamare, assimilare, opporre, adeguare
; ---------------------------------------------------------------------------
			(btrans-compar () (basic-trans)
			     (((prep (word-typ &as)			; come
                                     (not (down (cat verb))))))
			     (verb-indcompl-theme))
			  ; --- vedere
; ---------------------------------------------------------------------------
			(btrans-for () (basic-trans)
			     (((prep (word-typ &address-prep))		; per contro
			       (conj (word-typ &address-conj))))	; contro
			     (verb-indcompl-theme))
			  ; --- ringraziare
; ---------------------------------------------------------------------------
		        (btrans-indobj () (basic-trans indobj-verbs))
	       		  ; *** transitives admitting a indirect object
			  ; --- adattare, apportare, affidare, associare,
			  ; --- consegnare, dare, destinare,
			  ; --- domandare, gridare, inviare,
			  ; --- mandare, portare, procurare,
			  ; --- recare, regalare, rendere,
			  ; --- rifiutare, spedire, stropicciare???
; ---------------------------------------------------------------------------
		        (btrans-loc-dest () (basic-trans)
			     (((prep (word-typ &loc-to-prep) 		; a (I), to (E)
                                     (down (lexsemtype £city)))))
			     (verb-indcompl-loc+to))
			  ; --- inviare, mandare, spedire
; ---------------------------------------------------------------------------
			(btrans-loc-from () (basic-trans loc-from-verbs))
			  ; --- ricevere
; ---------------------------------------------------------------------------
			(btrans-loc-indef () (basic-trans)
			     (((pron (word-typ &loc-pron))))		; ci vi
			     (pron-rmod-loc+metaph))
	      	 	  ; --- rimetterci
; ---------------------------------------------------------------------------
			(btrans-loc-metaph () (basic-trans)
			     (((prep (word-typ &theme-prep-2)		; su
                                    (down (not (semtype £gen-loc))))))
			     (verb-indcompl-loc+metaph))
	      	 	  ; --- basare, fondare
; ---------------------------------------------------------------------------
		        (btrans-loc-to () (basic-trans loc-to-verbs))
			  ; --- condurre, immettere, infilare, mettere, portare
			  ; --- appoggiare, scaricare, chiamare
; ---------------------------------------------------------------------------
			(btrans-multdiv () (basic-trans)
			     (((prep (word-typ &operator-prep) 		; per (I), by (E)
                                     (not (down (cat verb))))))
			     (verb-indcompl-theme))
			  ; --- dividere, moltiplicare
; ---------------------------------------------------------------------------
			(btrans-pred-objinf () (basic-trans sobj-inf-verbs predobj-verbs)
					())
	       		  ; *** transitives admitting a predicative complement
	       		  ; *** and a verb-infinite object
			  ; --- chiamare, definire, giudicare, ritenere
; ---------------------------------------------------------------------------
		        (btrans-pred-sinf () (basic-trans predobj-verbs)
	       		  ; *** basic transitives with a predication for the object,
                          ;     licensing an inf-verb predicative complement
			  ; --- vedere, sentire
		           (((verb (mood infinite))))
		           (verb-predcompl+obj))
; ---------------------------------------------------------------------------
		        (btrans-that-to-theme () (basic-trans stheme-that-to-verbs))
	       		  ; *** transitives with sentential theme
			  ; --- accusare, avvertire, avvisare, convincere,
			  ; --- minacciare, scommettere
; ---------------------------------------------------------------------------
		        (btrans-to-2 () (basic-trans stheme-to2-verbs theme-in-verbs))
	       		  ; *** transitives with a sentential object	; a (I), in (E)
			  ; --- aiutare, autorizzare, condannare, convincere,
			  ; --- costringere, destinare, indurre, dedicare,
			  ; --- mandare, spingere, tenere (ma solo al passivo)
; ---------------------------------------------------------------------------
			(btrans-to-time () (basic-trans)
			     (((prep (word-typ &time-prep)		; a (I), / (E)
                                     (not (down (cat verb))))))
			     (verb-indcompl-time))
			  ; --- rimandare, rinviare, anticipare
			  ; l'argomento dovrebbe essere di tipo temporale
			  ; (rinviare a domani), ma un evento può
			  ; identificare un tempo (rimandare alla gara di
			  ; Adelaide)
; ---------------------------------------------------------------------------
		(refl () (subj-verbs)
		     (((pron (clitic) (refl-agr))))
		     (emptycompl))
			  ; --- affermarsi, disputarsi, estinguersi,
			  ; --- evolversi, rassegnarsi, rifiutarsi, risvegliarsi,
			  ; --- delinearsi, sedersi, svolgersi, tenersi, esibirsi
; ---------------------------------------------------------------------------
			(refl-btrans () (refl basic-trans))	; Mi ricordo Luigi
			  ; --- ricordarsi, aspettarsi, attendersi
; ---------------------------------------------------------------------------
			(refl-from-theme () (refl theme-from-verbs))
			  ; --- guardarsi
; ---------------------------------------------------------------------------
			(refl-in-obj () (refl)
			     (((prep (word-typ &loc-metaph-prep))))	; in (I) in (E)
			     (verb-obj))
			  ; --- imbattersi, manifestarsi
; ---------------------------------------------------------------------------
			(refl-in-theme () (refl theme-in-verbs))
                          ; *** verbs admitting a theme governed by 'in' (E) or 'a' (I)
                          ;     both sentential and not sentential
			  ; --- accingere, rassegnare, limitarsi, opporsi
			  ; --- restringersi, aggrapparsi, impegnarsi
; ---------------------------------------------------------------------------
			(refl-loc-in () (refl loc-in-verbs))
			  ; --- trovarsi
; ---------------------------------------------------------------------------
			(refl-loc-to () (refl loc-to-verbs))
			  ; --- recarsi, riversarsi, evolversi
; ---------------------------------------------------------------------------
			(refl-manner () (refl)		; Mi sono sentito male
			     (((adv (type manner))))
			     (verb-indcompl-manner))
			  ; --- sentire, comportare
; ---------------------------------------------------------------------------
			(refl-name () (refl)		; Mi chiamo Luigi
			  (((art (type def)) noun))
			  (verb-predcompl+subj))
			  ; --- chiamarsi
; ---------------------------------------------------------------------------
			(refl-of-theme () (refl)
	       	  ; *** reflexive verbs with a theme
                  ;         (governed by "with" - English - or "di" - Italian)
                             (((prep (word-typ &theme-prep-3)		; di
                                     (not (down (cat verb))))
                               (pron (word-typ &partitive-pron) 	; ne
                                     (precedes-adjacent))))
                             (verb-indcompl-theme))
			  ; --- innamorare, riempire, disinteressare
; ---------------------------------------------------------------------------
			(refl-of-topic () (refl topic-verbs))
			  ; --- accorgersi, occuparsi, preoccuparsi, ricordarsi
			  ; --- servirsi, valersi
; ---------------------------------------------------------------------------
			(refl-on-topic () (refl)
			  ; *** reflexive verbs with a theme
                          ;         (governed by "in, on, about" - English - or "su" - Italian)
			     (((prep (word-typ &theme-prep-2))))	; su
			     (verb-indcompl-theme))
			  ; --- pronunciarsi, concentrarsi
; ---------------------------------------------------------------------------
			(refl-pred () (refl predsubj-verbs))
			  ; --- dimostrarsi, mostrarsi, rivelarsi
; ---------------------------------------------------------------------------
	 		(refl-result () (refl result-verbs))
			  ; --- trasformarsi
; ---------------------------------------------------------------------------
		        (refl-that-to () (refl sobj-that-to-verbs))
			  ; --- accorgersi, aspettarsi, preoccuparsi, ricordarsi
; ---------------------------------------------------------------------------
			(refl-to-obj () (refl sobj-to-verbs))
			  ; --- riservarsi
; ---------------------------------------------------------------------------
			(refl-to2 () (refl stheme-to2-verbs))
			  ; --- accingere, rassegnare, trovare, preparare
			  ; --- limitare
; ---------------------------------------------------------------------------
			(refl-with () (refl)
			     (((prep (word-typ &together-prep))))	; con
			     (verb-indcompl-together))
			  ; --- congratularsi, scontrarsi
; ---------------------------------------------------------------------------
			    (refl-to-with () (refl-with)
                              ; *** the prepositions 'con' (I) and 'with', 'against' (E)
                              ;     are inherited from refl-with
			         (((prep (word-typ &together-prep-2))))	; a (I), to (E)
			         (verb-indcompl-together))
			      ; --- unirsi

; &&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&
;  ABSTRACT CLASSESS
; &&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&

; ---------------------------------------------------------------------------
	 	(topic-verbs () (verbs) 
	       	  ; *** verbs with a topic
                  ;         (governed by "with" - English - or "di" - Italian)
		     (((prep (word-typ &theme-prep-3)			; di ; with (deal)
                             (not (down (cat verb))))
                       (pron (word-typ &partitive-pron) 		; ne
                             (precedes-adjacent))))
		     (verb-indcompl-theme))
; ---------------------------------------------------------------------------
		(loc-in-verbs () (verbs)
	       	  ; *** verbs with a 'in' location (static)
                  ;        (governed by "before, behind, beyond" - English - 
                  ;         or "a, davanti, dietro, oltre" - Italian,
                  ;         but also by "in" followed by a location term)
		     (((prep (word-typ &loc-prep-2)	; a davanti dietro oltre
			     (not (down (cat verb)))
			     (not (down (cat art)
				        (gender f)
                                        (number pl)
                                        (down (cat num)))))
                       (prep (word-typ &loc-prep-1)			; in
                             (down (semtype £gen-loc)))
                       (prep (word-typ &loc-prep-1)			; in
                             (down (down (semtype £gen-loc))))
                       (adv (type loc))
                       (adv (type interr) (lexsemtype loc))
		       (pron (lexsemtype loc))))
		     (verb-indcompl-loc+in))
; ---------------------------------------------------------------------------
		(loc-to-verbs () (verbs)
	       	  ; *** verbs with a 'to' location (movement)
		     (((prep (word-typ &loc-to-prep-2)  ; a in verso oltre davanti
                                                        ; dietro su sopra sotto fino
			     (not (down (cat verb))))
		      (adv (type loc))))
		     (verb-indcompl-loc+to))
; ---------------------------------------------------------------------------
		(loc-from-verbs () (verbs)
	       	  ; *** verbs with a 'from' location (movement)
		     (((prep (word-typ &loc-from-prep)			; da
			     (not (down (cat verb))))
		      (pron (type loc) (word-typ &loc-from-pron)))) 	; ne
		     (verb-indcompl-loc+from))
; ---------------------------------------------------------------------------
		(indobj-verbs () (verbs)
	       	  ; *** verbs with an indirect object
		     (((prep (word-typ &indobj-prep)			; a ; to
                             (not (down (cat verb))))
		       (pron (case liobj))))
		     (verb-indobj))
; ---------------------------------------------------------------------------
	        (result-verbs () (verbs)
		  ; *** verbs with a result (mutare, trasformarsi, risultare)
                  ;        (governed by "in, into" - English - or "in" - Italian)
		     (((prep (word-typ &theme-prep-6)			; in ; in into
                             (not (down (cat verb))))))
		     (verb-indcompl-result))
; ---------------------------------------------------------------------------
		(predsubj-verbs () (verbs)
	       	  ; *** verbs with a predication applied to subject; the predicator is unmarked
		     ((adj noun art
		       (pron (not (clitic)))
		       (verb (mood participle)) 
		       (adv (type compar)))) ; 'tra poco sara' peggio'
		     (verb-predcompl+subj))
; ---------------------------------------------------------------------------
		(pred-prep-subj-verbs () (predsubj-verbs)
	       	  ; *** verbs with a predication, but it can be expressed via any prep
		     ((prep))
		     (verb-predcompl+subj))
; ---------------------------------------------------------------------------
		(predobj-verbs () (verbs)
	       	  ; *** verbs with a predication applied to direct object
		     ((adj noun art
		       ;(pron (not (clitic)))
		       (verb (mood participle)) ; li Vede Favoriti
		       (adv (type compar))
                       (prep (word-typ &as)))) 	; he regards them as
		     (verb-predcompl+obj))
; ---------------------------------------------------------------------------
; *** this covers all verbs with a sentential object, and it is needed to
;     constrain the applicability of some transformations
		(sent-obj-verbs () (verbs) () (verb-obj))
 	      	  ; *** verbs with a sentential object
; ---------------------------------------------------------------------------
		   (sobj-that-verbs () (sent-obj-verbs)
	       	     ; *** verbs with sentential object governed by 'che' (I), 'that' (E)
		        (((conj (word-typ &base-subord-conj))))
		        (verb-obj))
; ---------------------------------------------------------------------------
		   (sobj-to-verbs () (sent-obj-verbs)
	       	     ; *** verbs with sentential object governed by 'di' (I), 'to' (E)
		        (((prep (word-typ &base-subord-prep)
                                (down (cat verb)))))
		        (verb-obj))
; ---------------------------------------------------------------------------
		       (sobj-that-to-verbs () (sobj-that-verbs sobj-to-verbs) ())
	       	         ; *** verbs with sentential object governed by 'di' or 'che' (I),
                         ;     'to' or 'that' (E)
; ---------------------------------------------------------------------------
		   (sobj-inf-verbs () (sent-obj-verbs)
	       	     ; *** verbs with an inf-verb sentential object
		        (((verb (mood infinite) (notmyaux))))
		        (verb-obj))
; ---------------------------------------------------------------------------
		   (sobj-yn-verbs () (sent-obj-verbs)
	       	     ; *** verbs governing yes/no questions
		        (((conj (word-typ &yes-no-conj))))		; se
		        (verb-obj+yn))
; ---------------------------------------------------------------------------
		   (sobj-q-verbs () (sent-obj-verbs)
	       	     ; *** verbs with an interrogative sentential object
                        (((verb (mood (ind cong condiz)) (has-interr))
                          (conj (word-typ &interr-conj))))	; come dove perché
		        (verb-obj+q))
; ---------------------------------------------------------------------------
; *** this covers all verbs with a sentential subject
		(sent-subj-verbs () (verbs)
		     (((pron (word-typ &interr-sent-pron))))	; che_cosa
		     (verb-subj))
 	      	  ; *** verbs with a sentential subject
; ---------------------------------------------------------------------------
		   (ssubj-that-verbs () (sent-subj-verbs)
	       	     ; *** verbs with sentential subject governed by 'che' (that)
		        (((conj (word-typ &base-subord-conj))))
		        (verb-subj))
; ---------------------------------------------------------------------------
		      (ssubj-that-to-verbs () (ssubj-that-verbs)
	       	        ; *** verbs with sentential subject governed by 'che' (that) or 'di' (to)
		        (((prep (word-typ &base-subord-prep)
                                (down (cat verb)))))
		        (verb-subj))
; ---------------------------------------------------------------------------
		   (ssubj-inf-verbs () (sent-subj-verbs)
	       	     ; *** verbs with an inf-verb sentential subject
		        (((verb (mood infinite) (notmyaux))))
		        (verb-subj))
; ---------------------------------------------------------------------------
		      (ssubj-that-inf-verbs () (ssubj-that-verbs ssubj-inf-verbs))
	       	        ; *** verbs with sentential subject governed by 'che' (that) or 
                        ;     nothing (verb in the infinite)
; ---------------------------------------------------------------------------
		         (ssubj-that-to-inf-verbs () (ssubj-that-to-verbs ssubj-inf-verbs))
	       	           ; *** verbs with sentential subject governed by 'che' (that) or 
                           ;     nothing (verb in the infinite)
; ---------------------------------------------------------------------------
; *** this covers all verbs with a theme
		(theme-verbs () (verbs) () (verb-indcompl-theme))
; ---------------------------------------------------------------------------
		     (stheme-to2-verbs () (theme-verbs)
	       	       ; *** verbs with a sentential theme governed by 'a' (It) or 'in' (En)
		          (((prep (word-typ &theme-prep-1)
                                  (down (cat verb)))))
		          (verb-indcompl-theme))
; ---------------------------------------------------------------------------
		     (stheme-to-verbs () (theme-verbs)
	       	       ; *** verbs with a sentential theme governed by 'di' (It) or 'to' (En)
		          (((prep (word-typ &base-subord-prep)	
                                  (down (cat verb)))))
		          (verb-indcompl-theme))
; ---------------------------------------------------------------------------
		          (stheme-that-to-verbs () (stheme-to-verbs)
	       	             ; *** verbs with a sentential theme governed by 'che' or 'di' (It),
                             ;     'that' or 'to' (En)
		                (((conj (word-typ &base-subord-conj))))
		                (verb-indcompl-theme))
; ---------------------------------------------------------------------------
                     (stheme-from-verbs () (theme-verbs)
	       	       ; *** verbs with a sentential theme governed by 'da' (It) or "from" (En)
                          (((prep (word-typ &theme-prep-5)			; from
                                  (down (cat verb)))))
	                  (verb-indcompl-theme))
; ---------------------------------------------------------------------------
	 	     (theme-in-verbs () (theme-verbs) 
	       	       ; *** verbs with a theme (both sentential and not sentential)
		       ;         governed by "in" (En) or "a" (It)
		          (((prep (word-typ &theme-prep-1)
                             (not (down (cat verb))))
		            (prep (word-typ &theme-prep-1)
                                  (down (mood gerund)))			; for English
		            (pron (case liobj))))
		          (verb-indcompl-theme))
; ---------------------------------------------------------------------------
; *** the next for a non-sentential theme
                (theme-from-verbs () (theme-verbs)
	       	  ; *** verbs with a theme governed by 'da' (It) or "from" (En)
                     (((prep (word-typ &theme-prep-5)			; da
                             (not (down (cat verb))))))
	             (verb-indcompl-theme))
))

